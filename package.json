{
  "name": "btt",
  "version": "0.0.1",
  "dependencies": {
    "browserify-shim": "^3.8.12",
    "dot": "^1.0.3",
    "gsap": "^1.19.0",
    "jquery": "~2.2.0",
    "jquery-lazyload": "^1.9.7",
    "malihu-custom-scrollbar-plugin": "^3.1.5",
    "normalize.css": "~3.0.3",
    "scrollmonitor": "^1.0.12"
  },
  "devDependencies": {
    "babelify": "~7.3.0",
    "babel-core": "~6.9.1",
    "babel-preset-es2015": "~6.9.0",
    "babel-plugin-add-module-exports": "~0.2.1",
    "babel-eslint": "~6.0.4",
    "lodash": "~4.0.0",
    "foldero": "~0.1.1",
    "minimist": "~1.2.0",
    "rimraf": "~2.5.0",
    "wrench": "~1.5.8",
    "gulp-plumber": "~1.0.1",
    "gulp-changed": "~1.3.0",
    "gulp-notify": "~2.2.0",
    "gulp-rename": "~1.2.2",
    "gulp-uglify": "~1.5.1",
    "del": "~2.2.0",
    "gulp-if": "~2.0.0",
    "glob": "~6.0.4",
    "gulp-data": "~1.2.1",
    "gulp-sourcemaps": "~1.6.0",
    "gulp-load-plugins": "~1.2.0",
    "gulp-cssnano": "~2.1.0",
    "vinyl-source-stream": "~1.1.0",
    "vinyl-buffer": "~1.0.0",
    "gulp-util": "~3.0.7",
    "gulp": "~3.9.0",
    "browser-sync": "~2.13.0",
    "gulp-jade": "~1.1.0",
    "jade": "~1.11.0",
    "gulp-postcss": "~6.0.1",
    "autoprefixer": "~6.3.1",
    "gulp-htmlmin": "~1.3.0",
    "envify": "~3.4.0",
    "gulp-imagemin": "~2.4.0",
    "imagemin-svgo": "~4.2.0",
    "imagemin-pngquant": "~4.2.0",
    "gulp-eslint": "~1.1.1",
    "gulp-sass": "~2.1.1",
    "gulp-newer": "~1.1.0",
    "js-yaml": "~3.5.2",
    "watchify": "~3.7.0 ",
    "browserify": "~13.0.1",
    "karma": "~0.13.19",
    "karma-browserify": "~4.4.2",
    "karma-phantomjs-launcher": "~0.2.3",
    "phantomjs": "~1.9.19",
    "karma-jasmine": "~0.3.6",
    "jasmine-core": "2.4.1"
  },
  "scripts": {
    "clean-deps": "rimraf node_modules"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.js",
    "doT": "./node_modules/doT/doT.js",
    "lazyload": "./node_modules/jquery-lazyload/jquery.lazyload.js",
    "TweenMax": "./node_modules/gsap/src/uncompressed/TweenMax.js",
    "mCustomScrollbar": "./node_modules/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js",
    "scrollMonitor": "./node_modules/scrollmonitor/scrollmonitor.js"
  },
  "browserify-shim": {
    "jquery": "jQuery",
    "mCustomScrollbar": "mCustomScrollbar"
  },
  "engines": {
    "node": ">=0.12.0"
  },
  "//": "CUSTOM CONFIGURATION",
  "config": {
    "//": "Entry files",
    "host": "127.0.0.1",
    "port": "3000",
    "baseUrl": "./",
    "directories": {
      "source": "src",
      "destination": "build",
      "temporary": "tmp",
      "//": "Directories relative to `source` directory",
      "modules": "_modules",
      "layouts": "_layouts",
      "images": "_assets/btt/images",
      "css": "_assets/btt/css",
      "fonts": "_assets/btt/css/fonts",
      "js": "_assets/btt/js",
      "data": "_data"
    },
    "entries": {
      "js": "main**.js",
      "css": "main**.{sass,scss}"
    }
  }
}
