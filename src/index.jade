extends _layouts/base

block config
    //- Correct base url pathing for this page
    - var baseUrl = '../'
    - var isSearch = true
    - var pageTitle = ' Search'

block content
    section.container.search
        .wrap
            .col-12.input--wrapper
                input.floating-input(type='text', placeholder='Bus stop number', data-hint='3000')
                button(type='button').btn.js-clear
                    span.sr-only clear
                    i.icon.icon-cross

            .col-12
                button(type="button").btn-refresh.js-refresh
                    span.sr-only Refresh
                    i.icon.icon-refresh

            .cards-wrapper
